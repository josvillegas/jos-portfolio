---
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";

const { title = "Proyecto", description = "Informacion del proyecto" } =
  Astro.props;
---

<html lang="en">
  <MainHead {title} {description} />
  <body>
    <slot />
    <Footer />
    <style is:global>
      :root {
        margin: 0 auto;
        padding: 40px 20px 0;
        box-sizing: border-box;
      }
      html {
        scroll-behavior: smooth;
        max-width: 1440px;
      }
      p {
        text-wrap: pretty;
      }
      body {
        background: #e8e8e8;
      }
      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }
    </style>
  </body>
</html>
