---
import SectionContainer from "../components/SectionContainer.astro";
import MainLayout from "../layout/MainLayout.astro";
import { type CollectionEntry, getCollection } from "astro:content";

const allProjects: CollectionEntry<"proyecto">[] =
  await getCollection("proyecto");
---

<MainLayout title="Portfolio Jos Villegas" description="UI Designer">
  <SectionContainer>
    {
      allProjects.map((proyecto) => (
        <div class="flex flex-col-reverse gap-10 justify-center items-center mb-28 p-3 md:flex-row">
          <div class="flex flex-col gap-4 text-black">
            <h3 class="text-3xl font-bold">{proyecto.data.title}</h3>
            <p class="text-sm text-black max-w-lg">
              {proyecto.data.infprincipal}
            </p>
            <span />
            <div class="flex gap-2">
              <div class="">
                <strong>Industry: </strong>
                {proyecto.data.tags.map((tag: string, index: number) => (
                  <span>{tag}</span>
                ))}
              </div>
            </div>
          </div>
          <a
            class="w-6/12 rounded-xl hover:scale-105 transition duration-500"
            href={proyecto.slug}
          >
            <img
              class="rounded-lg w-full h-full "
              src={"/images/" + proyecto.data.imgpreview}
              alt="proyecto01"
              width="100%"
              height="100%"
              title={`Imagen del proyecto - ${proyecto.data.title}`}
            />
          </a>
        </div>
      ))
    }
  </SectionContainer>
</MainLayout>
