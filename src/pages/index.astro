---
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../icons/Projects.astro";
import MainLayout from "../layout/MainLayout.astro";
import { type CollectionEntry, getCollection } from "astro:content";

const allProjects: CollectionEntry<"proyecto">[] =
  await getCollection("proyecto");
---

<MainLayout title="Portfolio Jos Villegas" description="UI Designer">
  <SectionContainer>
    <section class="flex py-8 px-10 mb-10">
      <div class="flex flex-col gap-y-3">
        <h1 class="text-5xl font-bold">Hi there, I'm Jos Lee</h1>
        <p class="text-lg">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Totam ad eius
          dolore architecto temporibus sapiente iusto corrupti! Distinctio
          perspiciatis rerum nobis corporis numquam dolorum asperiores repellat,
          est, minima autem dolorem?
        </p>
        <div class="mt-3">
          <a
            class="bg-gray-800 text-white py-2 px-4 rounded-lg font-bold hover:bg-gray-950"
            href="about"
            rel="noreferrer noopener">Learn more</a
          >
        </div>
      </div>
    </section>
    <span
      class="flex items-center text-4xl px-2 font-black text-gray-900 mb-12 gap-x-3"
    >
      <Projects class="size-7" /> Recent Projects
    </span>
    {
      allProjects.map((proyecto) => (
        <div class="flex flex-col-reverse gap-x-12 gap-y-6 justify-center items-center mb-16 md:mb-20 p-3 md:flex-row">
          <div class="flex flex-col gap-4">
            <h2 class="text-3xl font-bold text-gray-700">
              {proyecto.data.title}
            </h2>
            <p class="text-sm text-gray-600 max-w-md">
              {proyecto.data.infprincipal}
            </p>
            <span />
            <div class="flex gap-2">
              <div class="">
                <ul class="flex gap-x-4">
                  {proyecto.data.tags.map((tag: string, index: number) => (
                    <li class="bg-black text-white font-bold py-0.5 px-2 rounded-lg border border-black text-xs">
                      {tag}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
          <a
            class="w-11/12 rounded-xl hover:scale-105 transition duration-500 md:w-6/12"
            href={proyecto.slug}
            rel="noreferrer noopener"
          >
            <img
              class="rounded-lg w-full h-full "
              src={"/images/" + proyecto.data.imgpreview}
              alt="proyecto01"
              width="100%"
              height="100%"
              title={`Imagen del proyecto - ${proyecto.data.title}`}
            />
          </a>
        </div>
      ))
    }
  </SectionContainer>
</MainLayout>
