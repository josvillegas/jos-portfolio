---
import SectionContainer from "../../components/SectionContainer.astro";
import MainLayout from "../../layout/MainLayout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const allProjects: CollectionEntry<"proyecto">[] =
  await getCollection("proyecto");
---

<MainLayout title="Project">
  <SectionContainer>
    {
      allProjects.map((proyecto) => (
        <div class="flex flex-col gap-10 justify-between items-center mb-28">
          <div class="flex flex-col gap-4 text-black w-full ">
            <h3 class="text-3xl font-bold text-center">
              {proyecto.data.title}
            </h3>
            <p class="text-sm text-black">{proyecto.data.infprincipal}</p>
            <span />
            <div class="flex gap-2 items-center">
              <div class="mx-auto">
                <strong>Industry: </strong>
                {proyecto.data.tags.map((tag: string, index: number) => (
                  <span>{tag}</span>
                ))}
              </div>
            </div>
          </div>
          <div class="w-full  rounded-xl hover:scale-105 transition duration-500">
            <img
              class="rounded-lg w-full h-full "
              src={"/images/" + proyecto.data.imgpreview}
              alt="proyecto01"
              width="100%"
              height="100%"
              title="proyecto"
            />
          </div>
          <div class="flex mx-auto">
            <a
              class="bg-gray-700 text-white py-1 px-4 rounded-lg  hover:text-white hover:bg-gray-900"
              href={"/proyectos/" + proyecto.slug}
            >
              {proyecto.data.action}
            </a>
          </div>
        </div>
      ))
    }
  </SectionContainer>
</MainLayout>
